{% extends 'base.html.twig' %}

{% block title %}Connecté !{% endblock %}

{% block body %}
<form method="post" class="text-center align-items-center w-25 p-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Connecté à {{ app.user.email }}, <br> <a href="{{ path('app_logout') }}">Déconnecter</a>
        </div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal text-center align-items-center">Connexion</h1>
    <label for="inputEmail ">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control m-2" autocomplete="email" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control m-2" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-mg btn-primary m-3" type="submit">
        Se Connecter
    </button>
</form>
{% endblock %}
